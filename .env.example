# Environment Variables for Story Publisher
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_USERNAME=your_db_username
DB_PASSWORD=your_db_password

# JWT Secret (use a strong random string in production)
JWT_SECRET=your_very_long_secure_jwt_secret_key_here

# Email Configuration (optional)
MAIL_ENABLED=false
GMAIL_USERNAME=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password
MAIL_FROM=your-email@gmail.com

# Image Upload Configuration
IMAGE_UPLOAD_ENABLED=true
IMAGE_UPLOAD_MAX_SIZE=5MB
IMAGE_STORAGE_PATH=./uploads/images
IMAGE_BASE_URL=http://localhost:8080/api/images

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Production Database URL (for production deployment)
# DATABASE_URL=postgresql://username:password@host:port/database
